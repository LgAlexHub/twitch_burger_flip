{
    "manifest_version": 3,
    "name": "Twitch Burger Flip",
    "description": "Inverse twitch video",
    "version": "1.0",
    "action": {
        "default_icon": "default_icon_off.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": ["*://*.twitch.tv/*"]
}